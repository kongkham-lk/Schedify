<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintWidth_percent="0.995"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#242424"
            android:clipToPadding="true"
            android:clipChildren="true"
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="213dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLines="1"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/taskDueTime"
                android:layout_width="144dp"
                android:layout_height="33dp"
                android:layout_marginStart="30dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/create_page_save_btn"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/location_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/taskTitle" />

            <TextView
                android:id="@+id/taskDueDate"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/create_page_save_btn"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/taskDueTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/taskDueTime"
                app:layout_constraintTop_toBottomOf="@+id/taskDueTime"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="181dp"
                android:layout_height="22dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/create_page_save_btn"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/taskTitle"
                app:layout_constraintHorizontal_bias="0.605"
                app:layout_constraintStart_toStartOf="@+id/taskTitle"
                app:layout_constraintTop_toBottomOf="@+id/taskTitle"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/line"
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/rounded_background_highlighted"
                android:contentDescription="@string/time_set_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/taskDueTime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/taskTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHeight_percent="0.8"/> <!-- Replace with your drawable resource -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>